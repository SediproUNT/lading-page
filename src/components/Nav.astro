---
const menuItems = [
  { href: "/", text: "Inicio" },
  { href: "/nosotros", text: "Nosotros" },
  { href: "/noticias", text: "Noticias" },
  { href: "/contacto", text: "Contacto" },
];

const isLoggedIn = false; // Cambiar a true si el usuario está logueado
---

<nav class="bg-white border-b shadow-md">
  <div class="container mx-auto px-10">
    <div class="flex justify-between items-center h-30">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0">
        <img
          src="/assets/img/logo-sedipro.png"
          alt="Logo SEDIPRO UNT"
          class="h-20 w-auto"
        />
      </a>

      <!-- Menú de escritorio -->
      <div class="hidden lg:flex items-center space-x-16">
        {
          menuItems.map((item) => (
            <a
              href={item.href}
              class="text-gray-800 hover:text-[#4154A3] transition-colors duration-200 text-lg font-medium"
            >
              {item.text}
            </a>
          ))
        }

        <a
          href={isLoggedIn ? "/dashboard" : "/login"}
          class="px-10 py-3 rounded-full bg-[#4154A3] text-white hover:bg-[#2c3a7c] transition-colors duration-200 flex items-center gap-2 text-lg font-medium"
        >
          <span>{isLoggedIn ? "Dashboard" : "Login"}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            viewBox="0 0 24 24"
          >
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </a>
      </div>

      <!-- Botón del menú móvil -->
      <button
        id="menuButton"
        class="lg:hidden p-2 rounded-md hover:bg-gray-100"
        aria-label="Menú"
      >
        <svg
          class="w-8 h-8"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-16 6h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Menú móvil -->
  <div id="mobileMenu" class="lg:hidden hidden">
    <div class="px-6 py-4 space-y-4 border-t bg-white">
      {
        menuItems.map((item) => (
          <a
            href={item.href}
            class="block text-gray-800 hover:text-[#4154A3] transition-colors duration-200 text-lg font-medium"
          >
            {item.text}
          </a>
        ))
      }
      <a
        href={isLoggedIn ? "/dashboard" : "/login"}
        class="block py-2 text-[#4154A3] hover:text-[#2c3a7c] transition-colors duration-200 text-lg font-medium"
      >
        {isLoggedIn ? "Dashboard" : "Login"}
      </a>
    </div>
  </div>
</nav>

<script>
  const menuButton = document.getElementById("menuButton");
  const mobileMenu = document.getElementById("mobileMenu");

  menuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

  window.addEventListener("resize", () => {
    if (window.innerWidth >= 1024) {
      mobileMenu?.classList.add("hidden");
    }
  });
</script>
