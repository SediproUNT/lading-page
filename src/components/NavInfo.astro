---
const socialIcons = [
  {
    href: "https://www.facebook.com/SediproUNT",
    icon: "fa-facebook-f",
    label: "Facebook",
  },
  {
    href: "https://www.instagram.com/sediprount/",
    icon: "fa-instagram",
    label: "Instagram",
  },
  {
    href: "https://www.youtube.com/@SEDIPROUNT",
    icon: "fa-youtube",
    label: "YouTube",
  },
  {
    href: "https://www.linkedin.com/company/sediprount/",
    icon: "fa-linkedin",
    label: "LinkedIn",
  },
];
---

<nav
  class="hidden lg:block"
  style="background: radial-gradient(circle at 49.7% 40.3%, #3454a1 22.9%, #282d5f 76.7%, #282d5f 100.2%); padding: 0.9rem;"
>
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center">
      <!-- Contact Information -->
      <div class="flex items-center space-x-6">
        <a
          href="mailto:sediprount@unitru.edu.pe"
          class="flex items-center text-white hover:text-[#d4d7ed] transition-colors duration-200"
        >
          <i class="fa-regular fa-envelope mr-2 text-base"></i>
          <span class="text-base">sediprount@unitru.edu.pe</span>
        </a>

        <a
          href="tel:+51970153565"
          class="flex items-center text-white hover:text-[#d4d7ed] transition-colors duration-200"
        >
          <i class="fa-solid fa-phone-alt mr-2 text-base"></i>
          <span class="text-base">+51 970 153 565</span>
        </a>
      </div>

      <!-- Social Icons -->
      <div class="flex items-center space-x-4">
        {
          socialIcons.map(({ href, icon, label }) => (
            <a
              href={href}
              aria-label={label}
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:text-[#d4d7ed] transition-colors duration-200"
            >
              <i class={`fab ${icon} text-lg`} />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</nav>

<style>
  @import url("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css");
</style>
