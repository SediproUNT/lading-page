---
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-800 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8 border-b border-gray-700 pb-8">
      {/* Logo */}
      <div class="flex justify-center items-center">
        <img 
          src="/assets/img/logo-sedipro-dark.png"
          alt="Logo SEDIPRO"
          class="h-24 object-contain"
        />
      </div>

      {/* Dirección y Contacto */}
      <div class="space-y-4">
        <h2 class="text-xl font-bold mb-4">Dirección:</h2>
        <p class="flex items-center">
          <i class="fas fa-map-marker-alt mr-2"></i>
          123 Consectetur at ligula 10660
        </p>

        <h2 class="text-xl font-bold mb-4">Contacto:</h2>
        <p class="flex items-center">
          <i class="fas fa-phone-alt mr-2"></i>
          +51 970 153 565
        </p>
        <p class="flex items-center">
          <i class="far fa-envelope mr-2"></i>
          sedipro@unitru.edu.pe
        </p>
      </div>

      {/* Redes Sociales */}
      <div>
        <h2 class="text-xl font-bold mb-4">Síguenos en:</h2>
        <div class="flex space-x-4">
          <a 
            href="https://www.facebook.com/SediproUNT" 
            target="_blank" 
            rel="noopener noreferrer"
            class="hover:text-blue-400 transition-colors duration-200"
          >
            <i class="fab fa-facebook-f fa-lg"></i>
          </a>
          <a 
            href="https://www.instagram.com/sediprount/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="hover:text-pink-400 transition-colors duration-200"
          >
            <i class="fab fa-instagram fa-lg"></i>
          </a>
          <a 
            href="https://www.youtube.com/@SEDIPROUNT" 
            target="_blank" 
            rel="noopener noreferrer"
            class="hover:text-red-500 transition-colors duration-200"
          >
            <i class="fab fa-youtube fa-lg"></i>
          </a>
        </div>
      </div>
    </div>

    {/* Copyright */}
    <div class="text-center text-gray-400">
      <div class="w-full border-t border-gray-700 my-4"></div>
      <p>© {currentYear} SEDIPRO UNT. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>