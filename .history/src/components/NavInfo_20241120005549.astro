---
// SocialNav.astro
const socialIcons = [
  {
    href: "https://www.facebook.com/SediproUNT",
    icon: "facebook-f",
    label: "Facebook",
  },
  {
    href: "https://www.instagram.com/sediprount/",
    icon: "instagram",
    label: "Instagram",
  },
  {
    href: "https://www.youtube.com/@SEDIPROUNT",
    icon: "youtube",
    label: "YouTube",
  },
  {
    href: "https://www.linkedin.com/company/sediprount/",
    icon: "linkedin",
    label: "LinkedIn",
  },
];
---

<nav class="hidden lg:block bg-[#282d5f]">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center h-10">
      <!-- Contact Information -->
      <div class="flex items-center space-x-6">
        <a
          href="mailto:sediprount@unitru.edu.pe"
          class="flex items-center text-white hover:text-[#69bb7e] transition-colors duration-200"
        >
          <i class="far fa-envelope mr-2 text-sm"></i>
          <span class="text-sm">sediprount@unitru.edu.pe</span>
        </a>

        <a
          href="tel:+51970153565"
          class="flex items-center text-white hover:text-[#69bb7e] transition-colors duration-200"
        >
          <i class="fas fa-phone-alt mr-2 text-sm"></i>
          <span class="text-sm">+51 970 153 565</span>
        </a>
      </div>

      <!-- Social Icons -->
      <div class="flex items-center space-x-4">
        {
          socialIcons.map(({ href, icon, label }) => (
            <a
              href={href}
              aria-label={label}
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:text-[#2a2d66] transition-colors duration-200"
            >
              <i class={`fab fa-${icon} text-sm`} />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</nav>

<style>
  /* Asegúrate de que Font Awesome esté importado en tu layout principal */
  @import url("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css");
</style>
