<nav class="hidden lg:block bg-[#212934] text-white py-2">
  <div class="container mx-auto px-4">
    <div class="w-full flex justify-between items-center">
      <div class="flex items-center gap-6">
        {contactInfo.map(({ icon, href, text }) => (
          <div class="flex items-center group">
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke-width="1.5" 
              stroke="currentColor" 
              class="w-4 h-4 mx-3"
            >
              <Fragment set:html={icon} />
            </svg>
            <a
              href={href}
              class="text-sm hover:text-gray-300 transition-colors duration-200"
            >
              {text}
            </a>
          </div>
        ))}
      </div>

      <div class="flex items-center gap-4">
        {
          socialIcons.map(({ href, icon }) => (
            <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-gray-300 transition-colors duration-200"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-4 h-4"
              >
