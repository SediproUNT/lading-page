const contactInfo = [
  {
    icon: EnvelopeIcon,
    href: "mailto:sediprount@unitru.edu.pe",
    text: "sediprount@unitru.edu.pe"
  },
  {
    icon: PhoneIcon,
    href: "tel:+51970153565",
    text: "+51 970 153 565"
  }
];

const socialIcons = [
  { href: "https://www.facebook.com/SediproUNT", icon: "M16.5 8.25v4.5m6.75-4.5H16.5m-6.75 0H6" },
  { href: "https://www.instagram.com/sediprount/", icon: "M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0z" },
  { href: "https://www.youtube.com/@SEDIPROUNT", icon: "M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z M15.91 11.672a.375.375 0 0 1 0 .656l-5.603 3.113a.375.375 0 0 1-.557-.328V8.887c0-.286.307-.466.557-.327l5.603 3.112z" },
